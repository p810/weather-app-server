{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES6",
        "lib": ["ES2019", "DOM"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
            ],
        },
        "types": ["node", "jest"],
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*",
        "clients.config.ts",
        "api.config.ts",
    ],
    "exclude": [
        "node_modules/",
        "**/*.spec.ts",
    ],
}
